<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/login_background">

	<LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:gravity="center_vertical">

		<TextView android:text="@string/login_email"
			style="@style/login_text"
			android:layout_weight="0.5"/>

		<EditText android:id="@+id/login_email"
			style="@style/login_edit_text.email"
			android:layout_weight="0.5"/>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:gravity="center_vertical">

		<TextView android:text="@string/login_password"
			style="@style/login_text"
			android:layout_weight="0.5" />
	
		<EditText android:id="@+id/login_password"
			style="@style/login_edit_text.password"
			android:layout_weight="0.5"/>

	</LinearLayout>

	<Button android:id="@+id/login_button"
		android:text="@string/login_button"
		style="@style/login_button"/>
</LinearLayout>
